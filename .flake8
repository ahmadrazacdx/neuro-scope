select = B,B9,C,D,DAR,E,F,N,RST,Wselect = B,B9,C,D,DAR,E,F,N,RST,W

ignore = ignore = 

    # E203: whitespace before ':' (conflicts with black)    # E203: whitespace before ':' (conflicts with black)

    E203,    E203,

    # E501: line too long (black handles this)    # E501: line too long (black handles this)

    E501,    E501,

    # W503: line break before binary operator (conflicts with black)    # W503: line break before binary operator (conflicts with black)

    W503,    W503,

    # RST201: Block quote ends without a blank line    # RST201: Block quote ends without a blank line

    RST201,    RST201,

    # RST203: Definition list ends without a blank line      # E722: bare except is acceptable for diagnostic code

    RST203,    E722,

    # RST301: Unexpected indentation    # F841: unused variables are acceptable in diagnostics

    RST301,    F841,

    # E722: bare except is acceptable for diagnostic code    # E741: ambiguous variable names acceptable in math contexts

    E722,    E741

    # F841: unused variables are acceptable in diagnostics    # RST203: Definition list ends without a blank line  

    F841,    RST203,

    # E741: ambiguous variable names acceptable in math contexts    # RST301: Unexpected indentation

    E741    RST301,

    # W503: line break before binary operator (conflicts with black)

docstring-convention = google    W503

rst-roles = class,const,func,meth,mod,refmax-line-length = 88

rst-directives = deprecatedmax-complexity = 10

exclude = docstring-convention = google

    .git,rst-roles = class,const,func,meth,mod,ref

    __pycache__,rst-directives = deprecated

    .venv,exclude = 

    venv,    .git,

    build,    __pycache__,

    dist,    .venv,

    *.egg-info,    venv,

    .mypy_cache,    build,

    .pytest_cache,    dist,

    .tox,    *.egg-info,

    docs/_build    .mypy_cache,

    .pytest_cache,

per-file-ignores =    .tox,

    # Allow unused imports in __init__.py files    docs/_build

    __init__.py:F401per-file-ignores =

    # Tests can have longer lines and assertions    # Allow unused imports in __init__.py files

    tests/*.py:S101,E501    __init__.py:F401,F403

    # Allow complex test fixtures    # Allow assert statements in tests

    tests/conftest.py:E501    tests/*:S101

